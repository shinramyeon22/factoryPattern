package factoryPattern;
import java.util.Scanner;
public class Clinic{
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        while (true) {
            System.out.println("\n ~Pet Clinic Menu~ ");
            System.out.println("1. Create Dog");
            System.out.println("2. Create Cat");
            System.out.println("3. Exit");
            System.out.print("Select an option (1-3): ");

            int choice;
            try {
                choice = Integer.parseInt(scanner.nextLine());
            } catch (NumberFormatException e) {
                System.out.println("Invalid input. Please enter a number between 1 and 3.");
                continue;
            }

            if (choice == 3) {
                System.out.println("Exiting Pet Clinic...");
                break;
            }

            if (choice != 1 && choice != 2) {
                System.out.println("Invalid choice. Please select 1, 2, or 3.");
                continue;
            }

            System.out.print("Enter pet ID: ");
            String petId = scanner.nextLine();
            System.out.print("Enter pet name: ");
            String petName = scanner.nextLine();

            Pet pet = null;
            switch (choice) {
                case 1:
                    pet = new Dog();
                    break;
                case 2:
                    pet = new Cat();
                    break;
            }

            PetRecord petRecord = new PetRecord(petId, petName, pet);

            System.out.println("\n~Pet Record Created~");
            System.out.println("Pet ID: " + petRecord.getPetId());
            System.out.println("Pet Name: " + petRecord.getPetName());
            System.out.println("Pet Sound: " + petRecord.getPet().makeSound());
            System.out.println("Pet Play: " + petRecord.getPet().play());

            if (pet instanceof Dog) {
                System.out.println("Dog Breed: " + ((Dog)pet).getBreed());
            } else if (pet instanceof Cat) {
                System.out.println("Cat Lives: " + ((Cat)pet).getLives());
            }
        }

        scanner.close();
    }
}
